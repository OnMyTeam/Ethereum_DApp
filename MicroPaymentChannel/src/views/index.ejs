<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Login Page</title>

  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">
  <link href="public/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" cellspacing="0">
                      <thead>
                        <tr>
                          <th width="50%">Account</th>
                          <th>Balance</th>
                          <th>Token</th>
                        </tr>
                      </thead>
                      <tbody id="tableContent">
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Welcome OSDC Store!</h1>
                  </div>
                  <form class="user" id="loginform" action='/shop' method="POST">
                    <div class="form-group">
                      <label>Select Address</label>
                      <select class="custom-select" name="address" id="selectAccount">
                      </select>
                    </div>
                    <hr>
                    <input type="button" class="btn btn-primary btn-user btn-block" value="Login">
                    </button>
                    <a href="/join" class="btn btn-facebook btn-user btn-block">
                      <i class="fab fa-google fa-fw"></i> Join
                    </a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  
  <script src="public/js/lib/web3.min.js"></script>
  <script src="public/js/lib/truffle-contract.js"></script>
  <script src="public/js/init.js"></script>
  <script src="public/js/login.js"></script>




</body>

</html>